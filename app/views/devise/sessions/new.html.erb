<div class="center-container">
  <div class="archive-header">
	  <!-- Set page name to append to site title -->
    <h1><%= title 'Log in' %></h1>
  </div>

<% track_event "Starts sign in" %>

  <div class="grid-list-container">
	<div class="main-container">

  	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  	<div class="input-choice">
	    <div class="column1">
	      <%= f.label :email, '이메일' %>
	    </div>
	    <div class="column2">
	      <%= f.email_field :email, autofocus: true, class: 'text-field' %>
	    </div>
 	</div>

  	<div class="input-choice">
	    <div class="column1">
	      <%= f.label :password, '비밀번호' %>
	    </div>
	    <div class="column2">
	      <%= f.password_field :password, autocomplete: "off", class: 'text-field' %>
	    </div>
 	</div>


  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me  %></div>
  <% end -%>

<div class="signin-box">
    <%= f.submit '로그인', class: 'btn btn-danger btn-lg' %>
</div>

<%= render "devise/shared/links" %>

<% end %>

  </div>
</div>
</div>



