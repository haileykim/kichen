<div class="center-container">
  <div class="archive-header">
    <h1>Sign up</h1>
  </div>

  <div class="grid-list-container">
    <div class="main-container">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="input-choice">
    <div class="column1">
      <%= f.label :email, '이메일' %>
    </div>
    <div class="column2">
      <%= f.email_field :email, autofocus: true, class: 'text-field' %>
    </div>
  </div>

  <div class="input-choice">
    <div class="column1">
      <%= f.label :last_name, '성' %>
    </div>
    <div class="column2">
      <%= f.text_field :last_name, class: 'text-field' %>
    </div>
  </div>

  <div class="input-choice">
    <div class="column1">
      <%= f.label :first_name, '이름' %>
    </div>
    <div class="column2">
      <%= f.text_field :first_name, class: 'text-field' %>
    </div>
  </div>

  <div class="input-choice">
    <div class="column1">
    <%= f.label :password, '비밀번호' %> 
    </div>
    <div class="column2">
    <%= f.password_field :password, autocomplete: "off", class: 'text-field' %>
    </div>
  </div>

<div class="input-choice">
    <div class="column1">
      <%= f.label :password_confirmation, '비밀번호 확인' %>
    </div>
    <div class="column2">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'text-field' %>
  </div>
</div>

<div class="signin-box">
    <%= f.submit '가입하기', class: 'btn btn-danger btn-lg' %>
</div>

<% end %>

