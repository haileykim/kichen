<!-- Fixed navbar -->

  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
          </button>
          <%= link_to "Hailey's Kitchen", root_path, class: 'navbar-brand' %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to '레시피 찾기', recipes_path %></li>
            <% if current_user.try(:admin) %>
              <li><%= link_to '어드민', admins_path %></li>
            <% end %>

          </ul>

        <div class="navbar-form navbar-left">
        <div class="form-group">
          <%= form_tag recipes_path, method: :get do %>
            <%= search_field_tag :search, params[:search], placeholder: 'Search recipe', class: "form-control archive-search-text" %>
          <% end %>
        </div>
        </div>
            
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= image_tag(gravatar_url(current_user), width: 20, class: "img-circle") %>
                <%= current_user.first_name %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'My Profile', user_path(current_user) %></li>
                <li><%= link_to 'Account Settings', settings_path %></li>
                <li class="divider"></li>
                <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
            <% else %>
              <li><%= link_to '로그인', login_path %></li>
              <li><%= link_to '회원가입', signup_path %></li>
            <% end %>
          </ul>

        </div>
      </div>
    </div>


