<!DOCTYPE html>
<html>
<head>
  <title>Hailey's Kitchen</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <%= render 'layouts/header' %>
    <div class="container">
    	<% if notice %>
  	<p class="alert alert-success"><%= notice %></p>
	<% end %>
	<% if alert %>
		<p class="alert alert-danger"><%= alert %></p>
	<% end %>
	<%= yield %>
    </div>

  <script>
    mixpanel.identify(<%= current_user.id %>);
  </script>
  <% if current_user %>  
    <% mixpanel_people_set(email: current_user.email, name: full_name_of(current_user), id: current_user.id, created_at: current_user.created_at) %>
  <% end %>


</body>
</html>
