 <!-- Form for New Comment -->
<div class="row">
  <% if current_user %>
    <%= form_for @comment, url: recipe_comments_path(@recipe), id: 'new_comment_form', remote: true do |f| %>
    <form class="form-horizontal" role="form">
      <div class="media">
        <a class="pull-left" href="#">
          <%= image_tag(gravatar_url(current_user), width: 50, class: "img-circle") %>
        </a>
        <div class="media-body">
          
            <div class="input-group">
              <%= f.text_area :content, rows: 4, placeholder: '댓글을 남겨 주세요.', class: "form-control" %>
              <div style="margin:5px; float: right;">
              <%= f.submit '작성하기', class: "btn btn-danger" %>
            </div>
            </div>
          
        </div>
      </div>
    </form>
    <% end %>

    <% else %>
    <p class="comment-login">댓글을 작성하려면 <%= link_to '로그인', login_path %> 해 주세요. </p>
  <% end %>
</div>

  <!-- End Form -->