<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :source %><br>
    <%= f.text_field :source %>
  </div>

  <div class="field">
    <%= f.label :ingredients %><br>
  
    <%= f.fields_for :ingredients do |builder| %>
      <%= render 'ingredient_field', f: builder %>
    <% end %>
    <%= link_to_add_fields "<span class='glyphicon glyphicon-plus'></span> Add Field".html_safe, f, :ingredients %>
  </div>
  
  <div class="field">
    <%= f.label :method %><br>
    <%= f.text_area :method %>
  </div>
  <div class="field">
    <%= f.label :serving %><br>
    <%= f.number_field :serving %>
  </div>
  
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
