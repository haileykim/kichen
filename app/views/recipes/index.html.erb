<div class="container"> 
  <div class="archive-header">
    <h1>Recipes</h1>
      <div class="archive-subcats">
        <ul>
          <li>
            <%= link_to "전체", recipes_path, class: is_active?(recipes_path) %>
          </li>
          <% @tags.each do |tag| %>
          <li>
            <%= link_to tag.name, tag_path(tag.name), class: is_active?(tag_path(tag.name)) %> 
          </li>
        <% end %>
        </ul>
       </div>
  </div>

<script type="text/javascript">
  mixpanel.track("Viewed Recipe Index");
</script>

  <div class="grid-list-container">
    <div class="grid-list">
      <% @recipes.each do |recipe| %>
      <div class="recipe-item">
        <div class="grid-item-inner">
          <div class="recipe-item-image">
            <%= link_to image_for(recipe), recipe %>
          </div>
          
          <ul class="recipe-item-meta">
            <li><%= link_to truncate(recipe.name, length: 24), recipe %></li>
          </ul>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

