<h1>Listing recipes</h1>


<p>
  <% @tags.each do |tag| %>
  <h4> <%= link_to tag.name, tag_path(tag.name) %>
       (<%= tag.recipes_count %>)</h4>
  <% end  %>
</p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Method</th>
      <th>Serving</th>
      <th>Source</th>
      <th>Description</th>
       <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.method %></td>
        <td><%= recipe.serving %></td>
        <td><%= recipe.source %></td>
        <td><%= recipe.description %></td>
        <td><%= tags_for(recipe) %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
