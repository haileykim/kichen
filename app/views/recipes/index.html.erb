<div class="container"> 
  <div class="archive-header">
    <h1>Recipes</h1>
      <div class="archive-subcats">
        <ul>
          <li>
            <%= link_to "전체", recipes_path, class: is_active?(recipes_path) %>
          </li>
          <% @tags.each do |tag| %>
          <li>
            <%= link_to tag.name, tag_path(tag.name), class: is_active?(tag_path(tag.name)) %> 
          </li>
        <% end %>
        </ul>
       </div>
  </div>

<script type="text/javascript">
  mixpanel.track("Viewed Recipe Index");
</script>

  <div class="grid-list-container">
    <div class="grid-list">
      <%= render @recipes %>
    </div>
  </div>

  <div>
    <%= will_paginate @recipes %> 
  </div>

</div>

